<resources>

    <style name="searchTextStyle">
        <item name="android:textSize">@dimen/searchViewTextSize</item>
        <item name="android:paddingLeft">@dimen/searchViewTextPadding</item>
        <item name="android:paddingRight">@dimen/searchViewTextPadding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>

    <style name="headerLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/headerSize</item>
        <item name="android:paddingLeft">@dimen/paddingLeft</item>
        <item name="android:paddingRight">@dimen/paddingRight</item>
        <item name="android:paddingTop">@dimen/paddingTop</item>
        <item name="android:paddingBottom">@dimen/paddingBottom</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="headerTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center_vertical</item>


    </style>

</resources>
